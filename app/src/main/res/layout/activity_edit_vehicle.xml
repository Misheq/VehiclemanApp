<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Edit"
        android:textSize="40dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/navSave"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="setVehicleFromForm"
        />

    <EditText
        android:id="@+id/inputType"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/titleEdit"
        android:hint="Type"
        android:inputType="textPersonName"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/inputRegistration"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/inputType"
        android:hint="Plate number"
        android:inputType="textPersonName"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/inputColor"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/inputRegistration"
        android:hint="Color"
        android:inputType="textPersonName"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/inputDescription"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/inputColor"
        android:hint="Add description"
        android:inputType="textPersonName"
        android:layout_alignParentStart="true" />

    <!--
    <DatePicker
        android:id="@+id/inputServicingDate"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/inputDescription"
        android:datePickerMode="spinner"
        android:layout_alignParentStart="true" />
        -->

    <Spinner
        android:id="@+id/spinnerPersons"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/inputDescription"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>